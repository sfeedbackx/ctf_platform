{
  "name": "backend",
  "version": "1.0.0",
  "description": "CTF Platform Backend API",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec \"npx tsx\" src/server.ts",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write \"src/**/*.{js,ts,json}\"",
    "check": "prettier --check \"src/**/*.{js,ts,json}\"",
    "audit:fix": "npm audit fix"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": ["ctf", "api", "express", "typescript"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.11",
    "@types/node": "^22.12.3",
    "eslint": "^9.11.1",
    "nodemon": "^3.1.14",
    "prettier": "^3.3.3",
    "tsx": "^4.21.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.11.0"
  }
}
